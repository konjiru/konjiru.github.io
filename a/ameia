        var stage = 0;
        function bodyClick(){
            if(stage === 0){
                messageBox("To access the poem, <i>Migrants</i>, click on <br>the left side of the webpage.", false);
                leftMouseOver();
                setTimeout(function(){
		    document.getElementById("touchAnimation").style.left = "15%";
                    leftOnClick();
                    dot();
                }, 500);
                stage++;
            }
            else if(stage === 1){
                messageBox("To access the movie, <i>Looking for Alibrandi's</i> synopsis and trailer, <br>click on the left side of the webpage <u>again</u>.", false);
                setTimeout(function(){
                    leftOnClick();
                    dot();
                }, 500);
                stage++;
            }
            else if(stage === 2){
                document.getElementById("touchAnimation").style.left = "85%";
                messageBox("To close the left menu, click on right side of the webpage and the menus will collapse.", false);
                setTimeout(function(){
		    document.getElementById("touchAnimation").style.left = "85%"
                    rightOnClick();
                    dot();
                }, 500);
                setTimeout(function(){
                    rightOnClick();
                    dot();
                }, 1000);
                stage++;
            }
            else if(stage === 3){
                messageBox("You'll be unable to highlight text <br>with the left menus open, close the <br>menus to highlight text.", true);
                stage++;
            }
            else if(stage === 4){
                messageBox("These menu's can be accessable <br>throughout the website for easy reference. <br><br>Thank you!", true);
                stage++;
            }
            else if(stage === 5){
                document.getElementById("messageBoxDiv").style.display = "none";
                document.getElementById("initDisable").style.display = "none";
                enableScroll();
            }
        }

        function tutorial(){
            disableScroll();
            messageBox("Just a quick tutorial around my website...", true);
        }
