            function leftMouseOver(){
                if(!styleBool){
                var elem = document.getElementById("leftNavigationDisplay");
                elem.style.width = "0%";
                elem.style.backgroundColor = "rgba(0,0,0,0)";
                var stage = 0;
                clearInterval(animation);
                animation = setInterval(frameAni, 10);
                function frameAni(){
                    if(stage == 20){
                        clearInterval(animation);
                    }else{
                        elem.style.width = stage/2+"%";
                        elem.style.backgroundColor = "rgba(0,0,0,"+stage/50+")";
                        stage++;
                    }
                }
            }
            }
            function leftMouseOut(){
                if(!styleBool){
                var elem = document.getElementById("leftNavigationDisplay");
                var stage = 20;
                clearInterval(animation);
                animation = setInterval(frameAni, 10);
                function frameAni(){
                    if(stage == 00){
                        clearInterval(animation);
                        elem.style.width = "0%";
                    }else{
                        elem.style.backgroundColor = "rgba(0,0,0,"+stage/50+")";
                        stage--;
                    }
                }
            }
            }
