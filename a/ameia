        function disableScroll() {
            scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            scrollLeft = window.pageXOffset || document.documentElement.scrollLeft,
  
            window.onscroll = function() {
                window.scrollTo(scrollLeft, scrollTop);
            };
        }
  
        function enableScroll() {
            window.onscroll = function() {};
        }

        function dot(){
            var aId = null;
            const elem = document.getElementById("touchAnimation");
            elem.style.display = "block";
            var stage = 0;
            clearInterval(aId);
            aId = setInterval(ani, 10);
            function ani(){
                if(stage === 50){
                    clearInterval(aId);
                    elem.style.display = "none";
                }
                else{
                    elem.style.display = "block";
                    elem.style.opacity = 100 - (stage*2) + "%";
                    elem.style.width = 2 + (stage/6) + "vw";
                    elem.style.height = 2 + (stage/6) + "vw";
                    elem.style.borderRadius = (2 + (stage/6))/2 + "vw";
                    stage++;
                }
            }
        }
        window.addEventListener("load", entryPoint);
        function entryPoint(){
            if(innerWidth < 1100){
                document.getElementById("invalidScreenWidth").innerHTML = "<p>Whoops! This website doesn't like screen's which have a screen width &lt;1100 pixels! Please view this website on a desktop device or fullscreen the webpage.</p>";
                document.getElementById("invalidScreenWidth").style.width = "100%";
            }else{
                document.getElementById("invalidScreenWidth").innerHTML = "";
                document.getElementById("invalidScreenWidth").style.width = "0%";
            }

            setTimeout(tutorial, 100);
        }
        function messageBox(text, blurBool){
            document.getElementById("messageBoxText").innerHTML = text;
            if(blurBool){
                document.getElementById("mbOpacity").innerHTML = "div.message-box{-webkit-backdrop-filter: blur(5px);backdrop-filter: blur(5px);}";
            }else{
                document.getElementById("mbOpacity").innerHTML = "div.message-box{}";
            }
            setTimeout(function(){
            document.getElementById("messageBoxDiv").style.display = "block";
            document.getElementById("body").style.backgroundColor = "#FFFFFF";
            document.getElementById("Content").style.display = "block";
            document.getElementById("Loading").style.display = "none";
            }, 500);
        }
